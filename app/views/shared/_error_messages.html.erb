<% if @restroom.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error"> 
      The form contains <%= pluralize(@restroom.errors.count, 'error') %> 
    </div>
    <ul>
    <% @restroom.errors.full_messages.each do |msg| %> 
      <li> <%= msg %></li>
    <% end %> 
    </ul>
  </div>
<% end %> 